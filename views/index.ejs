<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quddies</title>
  <link rel="stylesheet" href="css/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/fontawesome/css/all.min.css">
  <style>
    .image {
      background-image: url("../images/bg.jpeg");
      background-repeat: no-repeat;
      height: 100vh;
      width: 100%;
      background-position: center;
      background-size: cover;
    }
  </style>
</head>

<body class="image">
  <div class="d-flex justify-content-end container">
    <button class="btn btn-primary rounded-pill mt-3 sign">signup</button>
  </div>
  <div class="container p-4">
    <form action="/auth/login" method="post" class="bg-white border w-100 p-5">
      <h3>Admin panel</h3>
      <div style="display: none;" class="msg alert alert-danger">
        <div class="d-flex justify-content-between">
          <p class="error">fields cannot be empty</p>
          <i class="fas fa-times fa-2x x"></i>
        </div>
      </div>
      <div class="input-group">
        <input class="mt-3 form-control adminid" type="text" placeholder="Admin id" />
        <span class="input-group-text mt-3">
          <i class="fas fa-user"></i>
        </span>
      </div>
      <div class="input-group">
        <input class="mt-3 form-control password" type="password" placeholder="password" />
        <span class="input-group-text mt-3">
          <i class="fas fa-key"></i>
        </span>
      </div>
      <button class="btn btn-outline-primary w-100 mt-3 loginbutton">login</button>

      <!-- trade mark -->
      <div class="footer mt-5 text-center">
        <h6>Powered by Hi-Tech</h6>
        <p>&copy; 2022</p>
      </div>
    </form>
  </div>
  <script type="text/javascript" src="js/main.js"></script>
</body>

</html>